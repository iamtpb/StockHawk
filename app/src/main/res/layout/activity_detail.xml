<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.udacity.stockhawk.ui.ActivityDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:textSize="24sp"
            android:gravity="start"
            android:text="Google?"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <!-- TODO: Add Label for Stock Price-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_stock_price"
                android:text="$804.63"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="#FFF"/>
            <!-- TODO: Add Label for Stock Change-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_stock_change"
                android:text="+$0.02"
                android:textAlignment="center"
                android:background="@drawable/percent_change_pill_green"
                android:gravity="end"
                android:padding="2dp"
                android:textColor="#fff"
                android:textStyle="bold"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <!-- TODO: Add Label for Day High Price-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_day_high"
                android:text="$999.99"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <!-- TODO: Add Label for Day Low Price-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_day_low"
                android:text="$0.0"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:layout_weight="1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            />
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartStock"
            android:layout_width="match_parent"
            android:layout_height="320dp"/>

    </LinearLayout>
</ScrollView>
